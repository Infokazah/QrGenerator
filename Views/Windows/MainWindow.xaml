<Window x:Class="QrGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QrGenerator"
        xmlns:vm="clr-namespace:QrGenerator.ViewModels"
        xmlns:xcees="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Width="1000" Height="1000" Grid.Column="0" Grid.Row="0" Source="{Binding QRCodeImage}"/>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1" >
            <StackPanel Orientation="Vertical" Margin="0 75 0 0" HorizontalAlignment="Center" Width="600">
                <TextBlock Width="560" Height="40" Text="Ссылка для QrCode" FontSize="24" TextAlignment="Center"/>
                <TextBox  Width="560" x:Name="StringBox" Height="50" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
            </StackPanel>
            <xcees:ColorPicker Width="400" Height="40" SelectedColor="{Binding BackColor}" Margin="0 75 0 0"/>
            <xcees:ColorPicker Width="400" Height="40" SelectedColor="{Binding FrontColor}" Margin="0 10 0 0"/>
            <Image Height="400" Width="400" Margin="0 75 0 10" Source="{Binding QrCodeIcon}"/>
            <Button Width="200"  Height="40" Command="{Binding DownLoadIconCode}" 
            Content="Выбрать иконку" FontSize="24"/>
            <Button Width="100"  Height="20" Command="{Binding GenerateQrCode}" 
                    CommandParameter="{Binding ElementName=StringBox, Path=Text}" Content="Сгенерировать"/>
        </StackPanel>
    </Grid>
</Window>
